    <div class="mt-20 ">

        <form id="form_registrar_nuevo_empleado" class="max-w-7xl mx-auto p-8 bg-slate-50 rounded-2xl shadow-lg">


            <h2 class="text-2xl font-extrabold text-gray-800 mb-10 text-center">Registro de Empleado</h2>


            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4  gap-x-6 gap-y-6">

                <!-- NOMBRES -->
                <div>
                    <div class="col-span-1">
                        <label for="nombres" class="block mb-1 font-medium text-lime-800 text-sm">Nombres</label>
                        <input type="text" id="nombre" name="nombre"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Pepito perez" />
                    </div>
                </div>


                <!-- APELLIDOS -->
                <div>
                    <div class="col-span-1">
                        <label for="apellidos" class="block mb-1 font-medium text-lime-800 text-sm">Apellidos</label>
                        <input type="text" id="apellidos" name="nombre"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="perez perez" />
                    </div>
                </div>


                <!-- Documento -->
                <div>
                    <div class="col-span-1">
                        <label for="documento" class="block mb-1 font-medium text-lime-800 text-sm">Documento</label>
                        <input type="number" id="documento" name="documento"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Documento" />
                    </div>
                </div>


                <!-- FECHA DE CONTRATACION -->
                <div>
                    <div class="col-span-1">
                        <label for="fecha_contratacion" class="block mb-1 font-medium text-lime-800 text-sm">Fecha de
                            Contratacion</label>
                        <input type="date" id="fecha_contratacion" name="fecha_contratacion"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="26/05/2025" />
                    </div>
                </div>


                <!-- TIPO DE CONTRATO -->
                <div>
                    <div class="col-span-1">
                        <label for="tipo_contrato" class="block mb-1 font-medium text-lime-800 text-sm">Tipo de
                            Contrato</label>
                        <select id="tipo_contrato" name="tipo_contrato"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="tipo_contrato" />
                        <option value="">Selecciona un contrato</option>
                        <option value="fijo">Termino Fijo</option>
                        <option value="indefinido">Indefinido</option>
                        </select>
                    </div>
                </div>



                <!-- SELECCIONE UN CARGO  -->
                <div>
                    <div class="col-span-1">
                        <label for="cargo" class="block mb-1 font-medium text-lime-800 text-sm">Cargo</label>
                        <select id="cargo" name="cargo"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Cargo" />
                        <option value="">Selecciona un Cargo</option>
                        <option value="administrador">Administrador</option>
                        <option value="director">Director</option>
                        <option value="tecnico">Tecnico</option>
                        <option value="invitado">Invitado</option>
                        </select>
                    </div>
                </div>


                <!-- ESTADO -->
                <div>
                    <div class="col-span-1">
                        <label for="estado" class="block mb-1 font-medium text-lime-800 text-sm">Estado</label>
                        <select id="estado" name="estado"
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="estado" />
                        <option value="">Selecciona un estado</option>
                        <option value="ACTIVO">activo</option>
                        <option value="INACTIVO">inactivo</option>
                        </select>
                    </div>
                </div>


                <!-- SELECCIONE UN LIDER  -->

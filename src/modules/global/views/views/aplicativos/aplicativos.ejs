            <span class="absolute bottom-2 right-2 w-6 h-6 bg-white/10 rotate-12 translate-x-1/3 translate-y-1/3"></span>
            <div class="relative z-10">
              <h2 class="text-lg font-semibold text-white mb-1"><%= app.nombre %></h2>
              <p class="text-xs text-white/80"><%= app.area %> </p>
              <p class="text-xs text-white/80"><%= app.observaciones %></p>
            </div>
          </a>
        <% }) %>

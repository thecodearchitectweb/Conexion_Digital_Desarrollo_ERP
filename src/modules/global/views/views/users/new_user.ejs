<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New User</title>

    <link href="/css/output.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700">

    <div class="mt-20 ">

        <form id="form_crear_nuevo_usuario" class="max-w-5xl mx-auto p-8 bg-slate-50 rounded-2xl shadow-lg">


            <h2 class="text-2xl font-extrabold text-gray-800 mb-10 text-center">Registro de Usuario</h2>


            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-6">

                <!-- Nombre Completo -->
                <div>
                    <div class="col-span-1">
                        <label for="nombre" class="block mb-1 font-medium text-lime-800 text-sm">Nombre Completo</label>
                        <input type="text" id="nombre" name="nombre" 
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Nombre completo" />
                    </div>
                </div>


                <!-- Documento -->
                <div>
                    <div class="col-span-1">
                        <label for="documento" class="block mb-1 font-medium text-lime-800 text-sm">Documento</label>
                        <input type="number" id="documento" name="documento"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Documento" />
                    </div>
                </div>


                <!-- SELECCIONE UN ESTADO  -->
                <div>
                    <div class="col-span-1">
                        <label for="estado" class="block mb-1 font-medium text-lime-800 text-sm">Cargo</label>
                        <select id="estado" name="estado"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="estado" />
                        <option value="">Selecciona un estado</option>
                        <option value="ACTIVO">activo</option>
                        <option value="INACTIVO">inactivo</option>
                        </select>
                    </div>
                </div>


                <!-- FECHA DE NACIMIENTO -->
                <div>
                    <div class="col-span-1">
                        <label for="fecha_nacimiento" class="block mb-1 font-medium text-lime-800 text-sm">Fecha de
                            Nacimiento</label>
                        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Fecha de
                            Nacimiento" />
                    </div>
                </div>


                <!-- CORREO ELECTRONICO -->
                <div>
                    <div class="col-span-1">
                        <label for="correo" class="block mb-1 font-medium text-lime-800 text-sm">Correo
                            Electronico</label>
                        <input type="email" id="correo" name="correo"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Correo Electronico" />
                    </div>
                </div>


                <!-- TELEFONO DE CONTACTO  -->
                <div>
                    <div class="col-span-1">
                        <label for="contacto" class="block mb-1 font-medium text-lime-800 text-sm"> Contacto </label>
                        <input type="number" id="contacto" name="contacto"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Contacto" />
                    </div>
                </div>


                <!-- DIRECCION  -->
                <div>
                    <div class="col-span-1">
                        <label for="direccion" class="block mb-1 font-medium text-lime-800 text-sm"> Direccion </label>
                        <input type="direccion" id="direccion" name="direccion"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Direccion" />
                    </div>
                </div>


                <!-- SELECCIONE UN AREA  -->
                <div>
                    <div class="col-span-1">
                        <label for="area" class="block mb-1 font-medium text-lime-800 text-sm">Departamento</label>
                        <select id="area" name="area"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Area" />
                        <option value="">Selecciona un area</option>
                        <option value="ingenieria">Ingenieria</option>
                        <option value="talento humano">Talento Humano</option>
                        </select>
                    </div>
                </div>


                <!-- SELECCIONE UN CARGO  -->
                <div>
                    <div class="col-span-1">
                        <label for="cargo" class="block mb-1 font-medium text-lime-800 text-sm">Cargo</label>
                        <select id="cargo" name="cargo"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Cargo" />
                        <option value="">Selecciona un Cargo</option>
                        <option value="administrador">Administrador</option>
                        <option value="director">Director</option>
                        <option value="invitado">Invitado</option>
                        </select>
                    </div>
                </div>


                <!-- SELECCIONE UN LIDER  -->
                <div>
                    <div class="col-span-1">
                        <label for="lider_directo" class="block mb-1 font-medium text-lime-800 text-sm">Lider Directo</label>
                        <select id="lider_directo" name="lider_directo"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="estado" />
                        <option value="">Selecciona un estado</option>
                        <option value="JOAN">JOAN</option>
                        <option value="DIANA">DIANA</option>
                        </select>
                    </div>
                </div>

                
                <!-- SELECCIONE UN ROL  -->
                <div>
                    <div class="col-span-1">
                        <label for="rol" class="block mb-1 font-medium text-lime-800 text-sm">Rol</label>
                        <select id="rol" name="rol"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="rol" />
                        <option value="">Selecciona un Rol</option>
                        <option value="ADMINISTRADOR">Administrador</option>
                        <option value="DIRECTOR">Director</option>
                        <option value="AUXILIAR">Auxiliar</option>
                        </select>
                    </div>
                </div>


                <!-- USUARIO -->
                <div>
                    <div class="col-span-1">
                        <label for="correo" class="block mb-1 font-medium text-lime-800 text-sm"> Usuario </label>
                        <input type="usuario" id="usuario" name="usuario"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase "
                            placeholder="Usuario" />
                    </div>
                </div>


                <!--CONTRASEÑA   -->
                <div>
                    <div class="col-span-1">
                        <label for="contraseña" class="block mb-1 font-medium text-lime-800 text-sm"> Contraseña</label>
                        <input type="password" id="contraseña" name="contraseña"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Contraseña" />
                    </div>
                </div>


                <!-- CONFIRMACION CONTRASEÑA  -->
                <div>
                    <div class="col-span-1">
                        <label for="contraseña_2" class="block mb-1 font-medium text-lime-800 text-sm"> Confirmar
                            Contraseña </label>
                        <input type="password" id="contraseña_2" name="contraseña_2"  
                            class="w-full px-4 py-2 border-b-2  border-lime-600  rounded-lg focus:outline-none focus:ring-1 focus:ring-lime-600 text-sm shadow-sm uppercase"
                            placeholder="Confirmar Contraseña" />
                    </div>
                </div>


            </div>


            <div>
                <div class="mt-8 text-center">
                    <button 
                        id="button_create_usuario"
                        type="submit"
                        class="px-8 py-3 bg-lime-700 hover:bg-lime-900 text-white font-semibold rounded-lg transition">
                        Crear Usuario
                    </button>
                </div>
            </div>

        </form>
    </div>


<script src="/global/js/users/api_crear_nuevo_usuario.js"></script>


</body>

</html>